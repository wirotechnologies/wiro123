<!DOCTYPE html>

<title>Payments</title>

{% block body %}
    <h1>Payments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ payment.value }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ payment.note }}</td>
            </tr>
            <tr>
                <th>PayDate</th>
                <td>{{ payment.payDate ? payment.payDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FilePath</th>
                <td>{{ payment.filePath }}</td>
            </tr>
            <tr>
                <th>FileName</th>
                <td>{{ payment.fileName }}</td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ payment.createdDate ? payment.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedDate</th>
                <td>{{ payment.updatedDate ? payment.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('payments_index') }}">back to list</a>

    <a href="{{ path('payments_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payments/_delete_form.html.twig') }}
{% endblock %}
